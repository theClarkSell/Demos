@model NotDelicious.Models.Tag

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    Link
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.LinkId, ((IEnumerable<NotDelicious.Models.Link>)ViewBag.PossibleLinks).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.LinkId.ToString(),
        Selected = (Model != null) && (option.LinkId == Model.LinkId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.LinkId)
</div>
